<resources>

    <!--正常模式下的主题-->
    <style name="main_theme_light" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="text_color">@color/text_color_light</item>
    </style>

    <!--黑暗模式下的主题-->
    <style name="main_theme_dark" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="text_color">@color/text_color_dark</item>
    </style>
<style name="slide_activity" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="android:windowBackground">@android:color/transparent</item>
    <item name="android:windowIsTranslucent">true</item>
</style>

</resources>
